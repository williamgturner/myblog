---
import Layout from "../../layouts/MainLayout.astro";
---

<Layout>
  <h1>projects</h1>
  <div class="flex flex-col">
    <div class="flex justify-between">
      <div class="flex flex-col">
        <h2 class="ml-1">Home Helper [wip]</h2>
        <p class="ml-1">
          an online tool for tracking and managing home renovation projects <a
            class="align-bottom"
            href="/projects/home-helper/">read more &gt;</a
          >
        </p>
      </div>
      <img
        src="/images/projects/home-helper.png"
        class="h-30 m-5 rounded-sm border-1 border-black shadow-lg"
      />
    </div>
    <hr class="my-5" />
    <div class="flex justify-between">
      <img src="/images/projects/algoVis.png" class="h-30" />
      <div class="flex flex-col text-right">
        <h2 class="mr-1">algoVis</h2>
        <p class="mr-1">
          an algorithm visualiser programmed in python <a
            class="align-bottom"
            href="/projects/algovis/">read more &gt;</a
          >
        </p>
      </div>
    </div>
    <hr class="my-5" />
    <div class="flex justify-between">
      <div class="flex flex-col">
        <h2 class="ml-1">raycast renderer</h2>
        <p class="ml-1">
          a Wolfentstein 3D style raycast renderer programmed in C using SDL2 <a
            class="align-bottom"
            href="/projects/raycast/">read more &gt;</a
          >
        </p>
      </div>
      <img src="/images/projects/algoVis.png" class="h-30" />
    </div>
  </div>
</Layout>

<style>
  a {
    color: blue;
  }

  h2 {
    font-size: 1.5rem;
  }
</style>
