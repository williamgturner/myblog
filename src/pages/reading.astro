---
import Layout from "../layouts/MainLayout.astro";
import books from "../data/books.json";

const sortedBooks = books.sort(
  (a, b) => new Date(b.dateRead) - new Date(a.dateRead)
);
---

<Layout>
  <h1>reading</h1>
  <p>this is a list of the books I have read:</p>

  <ul class="flex flex-col mx-auto max-w-4xl w-full">
    <li class="flex font-bold mb-2">
      <span class="basis-1/3">Title</span>
      <span class="basis-1/3">Author</span>
      <span class="basis-1/3">Date Read</span>
    </li>

    {
      sortedBooks.map((book) => (
        <>
          <li class="flex my-2">
            <span class="basis-1/3">{book.title}</span>
            <span class="basis-1/3">{book.author}</span>
            <span class="basis-1/3">{book.dateRead}</span>
          </li>
          <hr class="my-2 mx-auto w-full max-w-4xl" />
        </>
      ))
    }
  </ul>
</Layout>

<style>
  span {
    padding-right: 20px;
  }
  @media (width > 64rem) {
    span {
      padding-right: 50px;
    }
  }
</style>
