---
import MainLayout from "./MainLayout.astro";

const { frontmatter } = Astro.props;
---

<MainLayout>
  <div class="mb-5">
    <a href="javascript:history.back()" class="text-xl text-black">&lt; back</a>
    <div id="post-header" class="flex">
      <img
        class="w-15 h-15 self-center mr-5"
        src={`${frontmatter.image.url}`}
        alt={frontmatter.title}
      />
      <div>
        <h1 class="leading-tight">{frontmatter.title}</h1>
        <small>
          {
            new Date(frontmatter.pubDate).toLocaleString("en-NZ", {
              year: "numeric",
              month: "long",
              day: "numeric",
              hour: "2-digit",
              minute: "2-digit",
              second: "2-digit",
              hour12: true,
            })
          }
          NZST
        </small>
      </div>
    </div>
    <hr class="my-5" />
    <slot />
  </div>
</MainLayout>

<style>
  #post-header h1 {
    padding: 0;
    font-size: 3rem;
  }

  a {
    font-family: "Libre Baskerville";
  }

  p {
    margin-bottom: 1rem;
  }

  img {
    border-radius: 0.375rem;
  }
</style>
